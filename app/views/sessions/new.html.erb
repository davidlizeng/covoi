<% content_for :head do %>
  <div id="login_box">
    <%= form_for :session, url: session_path do |f| %>
      <div id="login_email">
        <div>
          <%= f.label :email %>
        </div>
        <div>
          <%= f.text_field :email, :id => "login_email_text" %>
        </div>
        <div id="login_error">
        </div>
      </div>
      <div id="login_password">
        <div>
          <%= f.label :password %>
        </div>
        <div>
          <%= f.password_field :password, :id => "login_password_text" %>
        </div>
        <div id="forgot_password">
          <%= link_to "Forgot your password?", "/iforgot/new" %>
        </div>
      </div>
      <div id="login_submit">
        <%= f.submit "Login" %>
      </div>
    <% end %>
  </div>
<% end %>

<div id="register_box" class="box">
  <div class="box_title">Register</div>
  <div id="register_error"></div>
  <div class="spacer"></div>
  <%= form_for :user, :remote => true, url: users_path, :html => {:id => "register_form"} do |f| %>
    <div>
      <%= f.label :first_name, "First Name" %>
    </div>
    <div>
      <%= f.text_field :first_name %>
    </div>
    <div>
      <%= f.label :last_name, "Last Name" %>
    </div>
    <div>
      <%= f.text_field :last_name %>
    </div>
    <div>
      <%= f.label :phone, "Cell Phone Number" %>
    </div>
    <div>
      <%= f.text_field :phone %>
    </div>
    <div>
      <%= f.label :email %>
    </div>
    <div>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :email_confirmation, "Confirm Email" %>
    </div>
    <div>
      <%= f.text_field :email_confirmation %>
    </div>
    <div>
      <%= f.label :password %>
    </div>
    <div>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.label :password_confirmation, "Confirm Password" %>
    </div>
    <div>
      <%= f.password_field :password_confirmation %>
    </div>
    <div>
      <%= f.submit "Register", :id => "register_submit"%>
    </div>
  <% end %>
</div>
