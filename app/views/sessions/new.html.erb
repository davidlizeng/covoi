<header class="fat">
  <div class="container">
    <div class="row">
      <div class="logo span6">
        <a href="/">
          <img src="/images/rg_logo_white.png" alt>
          <h1 class="name">RideGrouped</h1>
        </a>
      </div>
      <div id="login-buttons" class="span6">
        <div class="btn-group">
          <a href="#login_box" class="btn btn-large" data-toggle="modal">Log in</a>
          <a href="#register_box" class="btn btn-large" data-toggle="modal">Sign up</a>
        </div>
      </div>
      <div class="row hidden-phone">
        <div id="tagline" class="span12">
          <h1 class="big thin">Share a ride. Save money.</h1>
        </div>
      </div>
    </div>
  </div>
</header>
<div id="content">
  <div class="container">
    <div class="row">
      <div class="span1 gutter-icon">
        <img src="/images/airplane.svg" alt="">
      </div>
      <div class="span11">
        <h1 class="thin">Heading home this summer?</h1>
        <p class="lead">Look no further! We're here to save you money while you enjoy the comfort of a shuttle ride to the airport. </p>
      </div>
    </div>
  </div>
</div>
<%= render "login_box" %>
<%= render "register_box" %>