<h1>Validate Your Registration & Create Your Password</h1>
<%= form_for(:user, url: user_path(@id), :method => "put") do |f| %>
  <%= f.label :temporary_password %>
  <%= f.password_field :temporary_password %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Create Password and Validate" %>
<% end %> 

