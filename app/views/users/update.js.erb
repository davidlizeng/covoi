<% if @user.errors.any? %>
  $('#message_banner').append('<div class="error"><%= escape_javascript(@user.errors.full_messages[0]) %></div>');
<% else %>
  $('#message_banner').append('<div class="notice">Changes submitted!</div>');
  $('#user_first_name').val('<%= escape_javascript(@user.first_name) %>');
  $('#user_last_name').val('<%= escape_javascript(@user.last_name) %>');
  $('#user_password').val('');
  $('#user_password_confirmation').val('');
  $('#user_current_password').val('');
<% end %>
