<header class="skinny">
  <div class="container">
    <div class="row">
      <div class="logo span8">
        <a href="/">
          <img src="/images/logo-white.svg" alt="">
          <h1 class="name">RideGrouped</h1>
        </a>
      </div>
      <div class="span2">
        <div class="btn-group">
          <%= link_to @user.first_name + " " + @user.last_name, edit_user_path(@user.id), :class => "btn" %>
          <%= link_to "Log out", session_path, :method => :delete, :class => "btn" %>
        </div>
      </div>
    </div>
  </div>
</header>

<div id="content">
  <div class="container">
    <!--<div class="row">
      <div class="span10">
        <div class="progress">
          <div class="bar" style="width: 33%;"></div>
          (step 1 of 3)
        </div>
        <h2 class="thin">What are you looking for in a ride?</h2>
      </div>
    </div>-->
    <div class="row">
      <div id="ride-map" class="span5"></div>
        <!--<div class="box_title">
          <% unless @matches.empty? %>
            <span id="show_active" class="tab">Active Rides</span>
          <% end %>
        </div> -->
      <div id="trip_box">
        <%= form_for :trip, :remote => true, url: trips_path, :html => {:autocomplete => "off"} do |f| %>
          <fieldset class="span2">
            <h4>Pickup Location</h4>
            <% @origins.each do |origin| %>
              <label class="radio">
                <%= f.radio_button :origin_id, origin[:id].to_s %><%= origin[:name] %>
              </label>
            <% end %>
          </fieldset>
          <fieldset class="span1">
            <h4>Airport</h4>
            <% @airports.each do |airport| %>
              <label class="radio">
                <%= f.radio_button :airport_id, airport[:id].to_s %><%= airport[:code] %>
              </label>
            <% end %>
          </fieldset>
          <fieldset class="span2">
            <h4>Flight Type</h4>
            <label class="radio">
              <%= f.radio_button :type, "1" %>Domestic
            </label>
            <label class="radio">
              <%= f.radio_button :type, "2" %>International
            </label>
          </fieldset>
          <div class="span5"></div>
          <fieldset class="span2">
            <h4>Date of Departure</h4>
            <%= f.text_field :date, :class => "span2" %>
          </fieldset>
          <fieldset class="span3">
            <h4>Flight Time</h4>
            <%= f.select :hour, options_for_select((1..12).to_a), {:include_blank => true}, {:class => "span1"} %>
            <%= f.select :minute, options_for_select((0..59).to_a.map {|m| m.to_s.rjust(2, "0")}), {:include_blank => true}, {:class => "span1"} %>
            <%= f.select :meridiem, options_for_select(["AM", "PM"]), {:include_blank => true}, {:class => "span1"} %>
          </fieldset>
          <div class="span5">
            <%= f.submit "Search", :id => "trip_submit" , :class => "btn btn-primary"%>
          </div>
        <% end %>
      </div>
      <div id="match_box">
        <div class="row">
          <table class="span5 table table-striped">
            <thead>
              <tr>
                <th>Pickup Location</th>
                <th>Destination</th>
                <th>Date</th>
                <th>Pickup Time</th>
              </tr>
            </thead>
            <tbody id="match_table">
            </tbody>
          </table>
        </div>
      </div>
      <div id="payment_box">
        <div class="row">
        </div>
      </div>
    </div>
  </div>
</div>

