<% if @user.errors.any? %>
  display_message('<%= escape_javascript(@user.errors.full_messages[0]) %>', 'error', 'register_error', 'register_submit');
<% else %>
  $('#user_first_name').val('');
  $('#user_last_name').val('');
  $('#user_phone').val('');
  $('#user_email').val('');
  $('#user_email_confirmation').val('');
  $('#user_password').val('');
  $('#user_password_confirmation').val('');
  clear_message('register_error');
  display_message('Thank you for registering with RideGrouped! Check your email to confirm your registration!', 'notice', 'message_banner', 'register_submit');
<% end %>
