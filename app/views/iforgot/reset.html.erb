<header class="skinny">
  <div class="container">
    <div class="row">
      <div class="logo span10">
        <a href="/">
          <img src="/images/rg_logo_white.png" alt="">
          <h1 class="name">RideGrouped</h1>
        </a>
      </div>
      <div class="span2">
      </div>
    </div>
  </div>
</header>


<div id="content">
<div class="spacer"></div>
<% if @error %>
  <div class="error"><%= @error %></div>
<% else %>
  <div id="reset_box" class="box">
    <div class="box_title">Reset Your Password</div>
    <div id="reset_error"></div>
    <div class="small_spacer"></div>
    <%= form_for :user, :remote => true, url: "/iforgot/reset_post" do |f| %>
      <%= hidden_field_tag :id, @id %>
      <%= hidden_field_tag :token, @token %>
      <div>
        <%= f.label :password, "New Password" %>
      </div>
      <div>
        <%= f.password_field :password, :maxlength => 31 %>
      </div>
      <div>
        <%= f.label :password_confirmation, "Confirm New Password" %>
      </div>
      <div>
        <%= f.password_field :password_confirmation, :maxlength => 31 %>
      </div>
      <div>
        <%= f.submit "Reset", :id => "reset_submit"%>
      </div>
    <% end %>
  </div>
<% end %>
</div>
