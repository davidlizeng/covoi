<div class="box match_box">
<div class="box_title">Pick your ride!</div>
<%= form_for :trip, url: user_matches_path(current_user), :html => {:id => "payment_form"} do |f| %>
  <div>
    <%= radio_button_tag :trip_id, "0", @trip.id == 0 %> 
    <%= label_tag "trip_id_0", "#{@origins[@trip.origin_id - 1].name} to #{@airports[@trip.airport_id - 1].code} #{@airports[@trip.airport_id - 1].terminal}" %>
  </div>
  <% @trips.each do |trip| %>
    <div>
      <%= radio_button_tag :trip_id, "#{trip.id}", @trip.id == trip.id %>
      <%= label_tag "trip_id_#{trip.id}", "#{@origins[trip.origin_id - 1].name} to #{@airports[trip.airport_id - 1].code} #{@airports[trip.airport_id - 1].terminal}" %>
    </div>
  <% end %>
  <%= f.hidden_field :origin_id, :value => @trip.origin_id %>
  <%= f.hidden_field :airport_id, :value => @trip.airport_id %>
  <%= f.hidden_field :time, :value => @time %>
  <div>
    <%= label_tag :card_number, "Credit Card Number" %>
    <%= text_field_tag nil, nil, {name: nil, id: "card_number"} %>
  </div>
  <div> 
    <%= label_tag :card_code, "Security Code on Card (CVC)" %>
    <%= text_field_tag nil, nil, {name: nil, id: "card_code"} %>
  </div>
  <div>
    <%= label_tag :card_month, "Card Expiration" %>
    <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
    <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+8}, {name: nil, id: "card_year"} %>
  </div>
  <%= f.hidden_field :card_token %>
  <div>
    <%= f.submit "Finish!" %>
  </div>
<% end %>

</div>
