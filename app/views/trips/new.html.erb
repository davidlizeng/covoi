<div class="box plan_box">
<div class="box_title">Need a Ride?</div>
<%= form_for(:trip, url: user_trips_path(current_user)) do |f| %>
  <h2>Enter your trip info</h2>
  <div>
    <%= f.label :origin_id %>
  </div>
  <div>
    <%= f.select :origin_id, [['Stern Hall', 1],['Wilbur Hall', 2],['Lagunita Court', 3]], :include_blank => true %>
  </div>
  <div>
    <%= f.label :airport_id %>
  </div>
  <div>
    <%= f.select :airport_id, [['SFO Domestic', 1], ['SFO International', 2],['SJC Domestic', 3], ['SJC International', 4]], :include_blank => true %>
  </div>
  <div> 
    <%= f.submit "Plan!" %>
  </div>
<% end %>
</div>

