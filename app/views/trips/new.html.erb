<div class="box plan_box">
<div class="box_title">Need a Ride?</div>
<%= form_for(:trip, url: user_trips_path(current_user)) do |f| %>
  <h2>Enter your trip info</h2>
  <div>
    <%= f.label :origin_id %>
  </div>
  <div>
    <%= f.select :origin_id, @origin_choices, :include_blank => true %>
  </div>
  <div>
    <%= f.label :airport_id %>
  </div>
  <div>
    <%= f.select :airport_id, @airport_choices, :include_blank => true %>
  </div>
  <div> 
    <%= f.submit "Next" %>
  </div>
<% end %>
</div>

